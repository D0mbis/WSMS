<Window x:Class="WSMS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WSMS"
        xmlns:vm="clr-namespace:WSMS.ViewModels"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="500" Width="650">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Window.InputBindings>
        <KeyBinding Modifiers="Shift" Key="Esc" Command="{Binding CloseApplicationCommand}"/>
    </Window.InputBindings>
    <DockPanel >
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Exit" Command="{Binding CloseApplicationCommand}"/>
            </MenuItem>
            <MenuItem Header="Settings">
            </MenuItem>
        </Menu>
        <TabControl Margin="5">
            <TabItem Width="100" Header="Home">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Height="30" 
                        HorizontalAlignment="Left" VerticalAlignment="Top" 
                        Content="{Binding DriverBtnContent, UpdateSourceTrigger=PropertyChanged}"
                        Command="{Binding StartBrowserCommand}"/>
                    <Button Grid.Column="1" Height="30" 
                         HorizontalAlignment="Left" VerticalAlignment="Top" 
                         Content="Start Sending"
                         Command="{Binding StartSendingCommand}"/>
                </Grid>
            </TabItem>
            <TabItem Width="100" Header="Contacts"></TabItem>
            <TabItem Header="Message">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="430"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Image x:Name="ImageBlock" Height="400" Width="400" Grid.Column="0" Source="{Binding Image}" 
                            AllowDrop="True" Drop="Image_Drop" 
                            />
                    <TextBox Grid.Column="1" Height="400" 
                               TextWrapping="Wrap" AcceptsTab="True" AcceptsReturn="True"
                               Text="{Binding MessageText}" />
                </Grid>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
